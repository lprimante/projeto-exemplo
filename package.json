{
    "name": "projeto-exemplo",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "engine": {
        "node": "<=20",
        "yarn": ">=1.22.5",
        "npm": "please-use-yarn"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint && yarn typecheck",
            "pre-push": "yarn test -b"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "typecheck": "tsc --project tsconfig.json --noEmit",
        "prettier:write": "prettier --write src/**/*.{ts,tsx}",
        "test": "jest --runInBand --passWithNoTests",
        "test:watch": "jest --watch --runInBand",
        "test:coverage": "jest --u --coverage --watchAll false --runInBand"
    },
    "dependencies": {
        "@material-ui/core": "^4.12.4",
        "@material-ui/icons": "^4.11.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "5.3.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@testing-library/dom": "^10.1.0",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.7",
        "@testing-library/react-hooks": "^8.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@types/react-router-dom": "^5.3.3",
        "@types/testing-library__jest-dom": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^9.2.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.6",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.2.5",
        "react-test-renderer": "^18.3.1",
        "ts-jest": "^29.1.2",
        "typescript": "^5.4.5",
        "vite": "^5.2.0"
    }
}
